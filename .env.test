# Test Environment Configuration for Xfinity Router App
# This file is used specifically for testing with the mock router server

# Mock Router Server Configuration
# For Android: Use adb reverse to map 127.0.0.1:8081 -> localhost:3001
# For iOS simulator: Use localhost directly
MOCK_SERVER_HOST=127.0.0.1
MOCK_SERVER_PORT=8081
MOCK_SERVER_URL=http://127.0.0.1:8081

# Mock WebSocket Configuration  
MOCK_WS_URL=ws://127.0.0.1:8081

# Override router configuration to use mock server
# Android will use adb reverse mapping: 127.0.0.1:8081
# iOS simulator will use localhost
EXPO_PUBLIC_DEFAULT_ROUTER_IP=127.0.0.1:8081
EXPO_PUBLIC_DEFAULT_USERNAME=admin
EXPO_PUBLIC_DEFAULT_PASSWORD=password1

# Mock API Endpoints (using mock server)
EXPO_PUBLIC_CONNECTED_DEVICE_ENDPOINT=/connected_devices_computers.php
EXPO_PUBLIC_ROUTER_LOGIN_ENDPOINT=/index.php
EXPO_PUBLIC_ROUTER_ATAGLANCE_ENDPOINT=/at_a_glance.php
EXPO_PUBLIC_ROUTER_MANAGED_DEVICES_ENDPOINT=/managed_devices.php
EXPO_PUBLIC_ROUTER_CONNECTION_STATUS_ENDPOINT=/connection_status.php
EXP_PUBLIC_RESTORE_REBOOT=/restore_reboot.php

# API Configuration for Testing
EXPO_PUBLIC_API_TIMEOUT=5000
EXPO_PUBLIC_CONNECTION_TIMEOUT=2000

# App Configuration for Testing
EXPO_PUBLIC_APP_NAME=Xfinity Router App (Test)
EXPO_PUBLIC_APP_VERSION=1.0.0-test
EXPO_PUBLIC_DEBUG_MODE=true
EXPO_PUBLIC_MOCK_DATA_MODE=true
EXPO_PUBLIC_FORCE_REAL_MODE=false

# Test-specific Settings
NODE_ENV=test
EXPO_PUBLIC_ENABLE_DIAGNOSTICS=true
EXPO_PUBLIC_ENABLE_ADVANCED_SETTINGS=true

# Network Settings for Testing
EXPO_PUBLIC_MAX_RETRY_ATTEMPTS=2
EXPO_PUBLIC_RETRY_DELAY=500

# Security Settings for Testing
EXPO_PUBLIC_ENABLE_HTTPS=false
EXPO_PUBLIC_VALIDATE_SSL=false

# Jest Configuration
JEST_TIMEOUT=10000

# Mock Server Features
ENABLE_MOCK_WEBSOCKET=true
ENABLE_MOCK_DEVICE_UPDATES=true
MOCK_UPDATE_INTERVAL=5000

# Test Data Configuration
RESET_MOCK_DATA_BETWEEN_TESTS=true
ENABLE_MOCK_SERVER_LOGS=false

# Security Configuration for Testing
# Disable real network scanning to prevent security issues
DISABLE_REAL_LAN_SCANNING=true
USE_NETINFO_MOCKS=true
BLOCK_EXTERNAL_NETWORK_CALLS=true

# Platform-specific Network Configuration
ANDROID_USE_ADB_REVERSE=true
IOS_USE_LOCALHOST=true

# Test Credentials (NEVER use in production)
TEST_ROUTER_USERNAME=admin
TEST_ROUTER_PASSWORD=password1
TEST_WIFI_SSID=TestNetwork
TEST_WIFI_PASSWORD=testpass123

# Mock Network Configuration
MOCK_GATEWAY_IP=192.168.1.1
MOCK_CLIENT_IP=192.168.1.100
MOCK_SUBNET_MASK=255.255.255.0
MOCK_DNS_PRIMARY=8.8.8.8
MOCK_DNS_SECONDARY=8.8.4.4
